@model TaskManagementSystem.Models.Project

@{
    ViewBag.Title = "Project List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="">
    <h3 class="text-center" style="color: #0026ff;">Project List</h3>
    <table class="table table-striped table-hover" style="border: 1px solid #808080">
        <thead class="thead-dark">
            <tr>
                <th class="text-center align-middle" style="width: 15%">Name</th>
                <th class="text-center align-middle" >Description</th>
                <th class="align-middle text-center" style="width: 10%">Start Date</th>
                <th class="align-middle text-center" style="width: 10%">End Date</th>
                <th class="align-middle text-center" style="width: 8%">Status</th>
                <th class="align-middle text-center" style="width: 12%">Created By</th>
                <th class="align-middle text-center" style="width: 12%">Update By</th>
                <th class="align-middle text-center" style="width: 5%">Action</th>
            </tr>
        </thead>
        <tbody>
            @if(Model.ProjectList.Count <= 0)
            {
                <tr>
                    <td class="text-center align-middle text-danger" colspan="8" style="font-size: 20px; font-weight: 600;">Project Not Found</td>
                </tr>
            }
            @foreach (var item in Model.ProjectList)
            {
                <tr>
                    <td class="align-middle">@Html.DisplayFor(modelItem => item.Name)</td>
                    <td class="align-middle" style="text-align: justify">@Html.DisplayFor(modelItem => item.SubDescription)</td>
                    <td class="align-middle text-center">@Html.DisplayFor(modelItem => item.StartDate)</td>
                    <td class="align-middle text-center">@Html.DisplayFor(modelItem => item.EndDate)</td>
                    <td class="align-middle text-center">@Html.DisplayFor(modelItem => item.Status)</td>
                    <td class="align-middle text-center">@Html.DisplayFor(modelItem => item.CreatedBy)</td>
                    <td class="align-middle text-center">@Html.DisplayFor(modelItem => item.UpdatedBy)</td>
                    
                    <td class="align-middle">
                        <div class="dropdown text-center">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Action
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton" style="min-width: max-content;">
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id, area = "Admin" }, new { @class = "dropdown-item" })
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id, area = "Admin" }, new { @class = "dropdown-item" })
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

