@model TaskManagementSystem.Models.Attachment

@{ 
    
}

@using (Html.BeginForm("Index", "Attachment", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    <div class="form-horizontal">
        <h3>Add a Attachment</h3>
        <div>
            @Html.LabelFor(model => model.TaskId, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.TaskId, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TaskId, "", new { @class = "text-danger" })
        </div>

        <div>
            @Html.LabelFor(model => model.EmployeeName, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.EmployeeName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.EmployeeName, "", new { @class = "text-danger" })
        </div>

        <div>
            @Html.LabelFor(model => model.Docs, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.TextBoxFor(model => model.Docs,  new { @class = "form-control", type = "file", @multiple = "multiple" } )
            @Html.ValidationMessageFor(model => model.Docs, "", new { @class = "text-danger" })
        </div>

        <div>
            <input type="submit" value="Create" class="btn btn-primary" style="width: 100%; margin-top: 15px;"/>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
