
@{
    ViewBag.Title = "ResetPassword";
}

@if (ViewBag.IsLinkExpired)
{


    <h1 class="text-center text-danger">Link Expired.</h1>
}
else
{
    <div class="container">
        <h2>Reset Password</h2>
        @using (Html.BeginForm("ResetPassword", "Home", FormMethod.Post))
        {
            <div class="form-horizontal">
                <div class="form-group">
                    <label class="form-label">Password:</label>
                    @Html.Editor("Password", new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessage("Password", new { htmlAttributes = new { @class = "text-danger" } })
                </div>

                <div class="form-group">
                    <label class="form-label">Confirm Password:</label>
                    @Html.Editor("CnfPassword", new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessage("CnfPassword", new { htmlAttributes = new { @class = "text-danger" } })
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>

                @Html.ValidationMessage("message", new { htmlAttributes = new { @class = "text-danger" } })

            </div>
        }
    </div>
}

