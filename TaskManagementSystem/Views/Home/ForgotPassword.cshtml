
@{
    ViewBag.Title = "ForgotPassword";
    
}

<div class="container">
    @using (Html.BeginForm("ForgotPassword", "Home", FormMethod.Post))
    {
        <div class="form-horizontal">
            <div class="form-group">
                @Html.Label("Email", new { htmlAttributes = new { @class = "form-label" } })
                @Html.Editor("Email", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessage("Email", new { htmlAttributes = new { @class = "text-danger" } })
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Send Link</button>
            </div>

            @Html.ValidationMessage("message", new { htmlAttributes = new { @class = "text-danger" } })

        </div>
    }
</div>

